<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="380dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ivCek"
                android:background="@drawable/ic_delete"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_height="140dp"/>

            <TextView
                android:textColor="@color/hitam"
                android:id="@+id/tvKonfirmasi"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="18sp"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="@string/konfirmasi"
                android:layout_below="@+id/ivCek"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="Apakah anda yakin ingin menghapus data ini?"
                android:paddingEnd="10dp"
                android:paddingStart="10dp"
                android:id="@+id/tvTextKonfirmasi"
                android:fontFamily="@font/arvo"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_marginTop="15dp"
                android:layout_below="@+id/tvKonfirmasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:layout_marginBottom="55dp"
                android:id="@+id/vKonfirmasi"
                android:layout_alignParentBottom="true"
                android:padding="-10dp"
                android:background="@color/abu"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginTop="-55dp"
                android:layout_below="@+id/vKonfirmasi"
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:fontFamily="@font/montserrat_bold"
                    android:id="@+id/btnBatalKonfirmasi"
                    android:textColor="@color/hitam"
                    android:background="@color/abu"
                    android:text="BATAL"
                    android:layout_weight="0.9975"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <View
                    android:background="@color/abuPekat"
                    android:layout_weight="0.005"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

                <Button
                    android:fontFamily="@font/montserrat_bold"
                    android:id="@+id/btnYaKonfirmasi"
                    android:textColor="@color/putih"
                    android:text="Konfirmasi"
                    android:background="@color/merah"
                    android:layout_weight="0.9975"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>