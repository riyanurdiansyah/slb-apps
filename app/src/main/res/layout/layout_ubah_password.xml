<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivCek"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:src="@drawable/ic_lock" />

            <TextView
                android:id="@+id/tvKonfirmasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/montserrat_bold"
                android:gravity="center"
                android:text="@string/ubah_password"
                android:textColor="@color/hitam"
                android:textSize="18sp" />

            <EditText
                android:inputType="textPassword"
                android:maxLines="1"
                android:id="@+id/etUbahPassAdmin"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/bg_btn_6dp"
                android:backgroundTint="@color/abuMuda"
                android:fontFamily="@font/arvo"
                android:gravity="center"
                android:hint="@string/masukkan_password_baru"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="16sp" />

            <EditText
                android:maxLines="1"
                android:inputType="textPassword"
                android:id="@+id/etUbahPassAdmin2"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="40dp"
                android:background="@drawable/bg_btn_6dp"
                android:backgroundTint="@color/abuMuda"
                android:fontFamily="@font/arvo"
                android:gravity="center"
                android:hint="@string/konfirmasi_password"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnBatalPass"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.9975"
                    android:background="@color/abu"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="BATAL"
                    android:textColor="@color/hitam" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.005"
                    android:background="@color/abuPekat" />

                <Button
                    android:id="@+id/btnUbahPass"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="0.9975"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/montserrat_bold"
                    android:text="Ubah"
                    android:textColor="@color/putih" />

            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>