<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".guru.ui.TebakHurufGuruFragment">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_tbk_kata"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pagerTebakKataGuru"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/tab_layout_tbk_kata"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabTbkKataGuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        android:layout_centerInParent="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:src="@drawable/ic_adds"
        android:backgroundTint="@color/colorPrimary"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>