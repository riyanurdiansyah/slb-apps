<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".siswa.ui.TentangSekolahFragment">

    <com.smarteist.autoimageslider.SliderView
        android:id="@+id/sliderIvDetail"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        app:sliderAnimationDuration="3000"
        app:sliderAutoCycleDirection="back_and_forth"
        app:sliderIndicatorGravity="center|bottom"
        app:sliderIndicatorOrientation="horizontal"
        app:sliderIndicatorPadding="4dp"
        app:sliderIndicatorRadius="1.5dp"
        app:sliderIndicatorSelectedColor="@color/colorPrimary"
        app:sliderIndicatorUnselectedColor="@color/abu"
        app:sliderScrollTimeInSec="3"
        app:sliderStartAutoCycle="true" />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_tentang"
        android:elevation="5dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/putih"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabTextColor="@color/colorPrimary" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/pagerTentang"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" />


</LinearLayout>