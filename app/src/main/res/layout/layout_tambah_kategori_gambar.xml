<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_margin="10dp"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:background="@color/abuMuda"
                android:gravity="center"
                android:text="TAMBAH KATEGORI"
                android:textColor="@color/hitam"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <View
                android:background="@color/abu"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <TextView
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:text="Nama Kategori"
                android:textColor="@color/abuPekat"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <EditText
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:id="@+id/etTambahKategoriGuru"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_10dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                android:minHeight="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_gravity="start"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:text="Foto"
                android:textColor="@color/abuPekat"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/ivTambahKategoriGuru"
                android:src="@drawable/add"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:layout_width="250dp"
                android:layout_height="250dp"/>

            <Button
                android:id="@+id/btnBatalTambahKategoriGuru"
                android:textColor="@color/putih"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/abu"
                android:background="@drawable/bg_10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Batal"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <Button
                android:id="@+id/btnTambahKategoriGuru"
                android:textColor="@color/putih"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:backgroundTint="@color/colorPrimary"
                android:background="@drawable/bg_10dp"
                android:fontFamily="@font/montserrat_bold"
                android:text="Tambah Kategori"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>